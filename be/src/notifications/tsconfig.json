{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@common/*": [
        "../../common/*"
      ],
    },
  },
  "include": [
    "./src/**/*.ts",
    "./lib/**/*.ts",
    "./configs/**/*.ts",
    "../../commonTs/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
